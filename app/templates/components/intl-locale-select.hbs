<XSelect @name='country' @value={{country}} @on-change={{action "selectCountry"}} as |xs|>
  <xs.option @value={{null}}>None</xs.option>
  <xs.option @value="US">US</xs.option>
  <xs.option @value="BR">BR</xs.option>
</XSelect>
